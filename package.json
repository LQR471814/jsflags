{
  "name": "jsflags",
  "version": "1.0.0",
  "description": "A simple library for parsing flags, based on the golang \"flags\" library.",
  "exports": {
    "./*": {
      "types": "./dist/types/*.d.ts",
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js",
      "default": "./dist/esm/*.js"
    }
  },
  "scripts": {
    "prepare": "biome check . --apply-unsafe",
    "build": "rimraf dist && tsc -b ./config/tsconfig.cjs.json ./config/tsconfig.esm.json ./config/tsconfig.types.json",
    "test": "jest"
  },
  "keywords": [
    "flags",
    "command-line"
  ],
  "author": "LQR471814",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.3.3",
    "@swc/core": "1.3.99",
    "@swc/jest": "0.2.29",
    "@types/jest": "29.5.10",
    "jest": "29.7.0",
    "rimraf": "^5.0.5",
    "typescript": "5.3.2"
  }
}
